/**
 * Memory of 64 registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then
 * the in value is loaded into the memory location specified by address
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM64 {
    IN in[16], load, address[6];
    OUT out[16];

    PARTS:
    // Put your code here:
    DMux8Way(sel=address[3..5],in=load,a=loada,b=loadb,c=loadc,d=loadd,e=loade,f=loadf,g=loadg,h=loadh);
    RAM8(in=in,address=address[0..2],load=loada,out=a);
    RAM8(in=in,address=address[0..2],load=loadb,out=b);
    RAM8(in=in,address=address[0..2],load=loadc,out=c);
    RAM8(in=in,address=address[0..2],load=loadd,out=d);
    RAM8(in=in,address=address[0..2],load=loade,out=e);
    RAM8(in=in,address=address[0..2],load=loadf,out=f);
    RAM8(in=in,address=address[0..2],load=loadg,out=g);
    RAM8(in=in,address=address[0..2],load=loadh,out=h);
    Mux8Way16(sel=address[3..5],a=a,b=b,c=c,d=d,e=e,f=f,g=g,h=h,out=out);
}
